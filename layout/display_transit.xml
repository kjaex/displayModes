        android:layout_marginTop="250dp"
        android:layout_marginLeft="220dp"
        android:text="~Possible Time Constraints (e.g delays, schedule conflicts)"
        android:textColor="#f0e1b0"
        android:gravity="center_vertical"
        android:textSize="15sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_marginTop="373dp"
        android:background="#043927"
        android:text=" Additional Information"
        android:textStyle="bold"
        android:textColor="#f0e1b0"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="405dp"
        android:layout_marginLeft="10dp"
        android:text="Bus Services:"
        android:gravity="center_vertical"
        android:textColor="#f0e1b0"
        android:textSize="15sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="20dp"
        android:text="~Estimated to save over 1.4 billion gallons of gas"
        android:gravity="center_vertical"
        android:textColor="#f0e1b0"
        android:textSize="15sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
